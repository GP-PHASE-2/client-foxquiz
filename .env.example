# Server Configuration
# URL untuk backend server API dan Socket.IO
VITE_SERVER_URL=http://localhost:3000

# Development Configuration
# Port untuk development server (default: 5173)
# VITE_DEV_PORT=5173

# API Configuration
# Base URL untuk REST API calls
VITE_API_BASE_URL=http://localhost:3000/api

# Socket.IO Configuration  
# URL untuk Socket.IO connection (biasanya sama dengan server URL)
VITE_SOCKET_URL=http://localhost:3000

# Application Configuration
# Nama aplikasi
VITE_APP_NAME=FoxQuiz

# Environment
VITE_NODE_ENV=development

# Optional: Production URLs (uncomment for production)
# VITE_SERVER_URL=https://your-production-server.com
# VITE_API_BASE_URL=https://your-production-server.com/api
# VITE_SOCKET_URL=https://your-production-server.com

# Optional: CDN atau external resources
# VITE_CDN_URL=https://your-cdn.com
